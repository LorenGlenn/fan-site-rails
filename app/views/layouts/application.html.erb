<!DOCTYPE html>
<html>
  <head>
    <div class="container">
    <title>Comic Emporium</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Bangers" rel="stylesheet">

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>

    <nav class="navbar navbar-inverse bg-inverse">
      <%= image_tag "tag.png", :class => 'navbar-brand', :id => 'brand'%>
      <%= link_to "All Comics", works_path, :class => 'navbar-brand' %>
      <%= link_to "New Comic", new_work_path, :class => 'navbar-brand' %>

      <div class="pull-right">
      <%= form_tag(works_search_path, :method => "get", id: "search-form") do %>
          <%= text_field_tag :search, params[:search], placeholder: "Search", :class => 'search-field'%>
          <%= submit_tag "Search", :name => nil, :class => "btn btn-primary search-field" %>
      <% end %>
      </div>

    </nav>

    <%= flash[:alert] %>
    <%= flash[:notice] %>

    <%= yield %>

  </body>
  </div>
</html>
